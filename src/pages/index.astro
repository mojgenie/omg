---
import Home from "../components/Home.jsx";

import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
    <nav
        class="bg-white dark:bg-gray-900 fixed w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600"
    >
        <div class="flex flex-wrap items-center justify-center mx-auto p-4">
            <div class="flex gap-5">
                <a
                    href=""
                    class="flex items-center space-x-3 rtl:space-x-reverse"
                >
                    <img
                        src="/assets/img/jpg/omg-1.jpg"
                        class="w-[75px] h-[50px] object-contain"
                        alt="Flowbite Logo"
                    />
                </a>
                <a
                    href=""
                    class="flex items-center space-x-3 rtl:space-x-reverse"
                >
                    <img
                        src="/assets/img/jpg/omg-2.jpg"
                        class="w-[75px] h-[50px] object-contain"
                        alt="Flowbite Logo"
                    />
                </a>
                <a
                    href=""
                    class="flex items-center space-x-3 rtl:space-x-reverse"
                >
                    <img
                        src="/assets/img/jpg/omg-3.jpg"
                        class="w-[75px] h-[50px] object-contain"
                        alt="Flowbite Logo"
                    />
                </a>
            </div>
        </div>
    </nav>
    <!-- hero -->
    <div class="intro relative hero-img-overlay relative">
        <div class="intro-slideshow">
            <img
                src="https://stephendevassy.com/wp-content/uploads/2023/11/Hero-img-2-desktop-1024x576.webp"
            />

            <img
                src="https://stephendevassy.com/wp-content/uploads/2023/05/Biography-background-2.webp"
            />
            <img
                src="https://stephendevassy.com/wp-content/uploads/2023/05/DSC02167.webp"
            />
        </div>
        <div class="absolute top-[50%] bottom-0 left-0 right-0">
            <h1
                class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl text-white text-center"
            >
                New Year Eve <span class="text-blue-600 dark:text-blue-500"
                    >#Gala Night</span
                > 2024
            </h1>
        </div>
    </div>

    <!-- book now section -->

    <div class="p-5 bg-blue-100">
        <div
            class="flex flex-col lg:flex-row gap-3 items-start lg:items-center justify-between"
        >
            <div>
                <h1
                    class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-4xl dark:text-white"
                >
                    New Year Eve <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-pink-500"
                        >Gala Night
                    </span> 2023.
                </h1>
                <p
                    class="text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-400"
                >
                    31 Dec, 2023 | Kozhikode, Kerala
                </p>
            </div>
        </div>
    </div>
    <div
        class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-[1px]"
    >
    </div>
    <h1
        class="mb-4 text-3xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white text-center my-5 mb-[50px]"
    >
        Select your <span
            class="underline underline-offset-3 decoration-8 decoration-blue-400 dark:decoration-blue-600"
            >Ticket's</span
        >
    </h1>

    <!-- ticket section -->
    <Home client:load />

    <div class="h-[100px]"></div>
</Layout>
